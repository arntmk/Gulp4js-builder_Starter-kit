<!DOCTYPE html>
<html class="html" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#4682b4" />
		<meta name="apple-mobile-web-app-status-bar-style" content="#4682b4" />
		<meta name="apple-mobile-web-app-title" content="New Project" />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="color-scheme" content="light dark" />
		<meta name="format-detection" content="telephone=no" />
		<meta name="format-detection" content="address=no" />
		<meta name="author" content="Oleh Semchuk" />
		<meta name="robots" content="nofollow" /> <!-- noindex -->
		<!-- ____________________________________________ -->
		<meta name="keywords"
			content="{% block keywords %}
				{{ keywords }}
			{% endblock %}" />
		<meta name="description"
			content="{% block description %}
				{{ description }}
			{% endblock %}" />
		<title>
			{% block title %}
				{{ title }}
			{% endblock %}
		</title>

		<!-- ____________________________________________ -->
		<!-- _______________Font Import__________________ -->
		<!-- ____________________________________________ -->
		<!-- <link type="font/woff2" href="../font/Nunito-Regular.woff2" rel="preload" as="font" crossorigin /> -->

		<!-- ____________________________________________ -->
		<!-- _____________Favicon.ico Import_____________ -->
		<!-- ____________________________________________ -->
		<!-- Favicon PNG, Four sizes, size="32x32" -->
		<link type="image/x-icon"
			href="./template/images/favicon/favicon.ico"
			rel="icon" />

		<!-- Favicon SVG, sizes="any" -->
		<link type="image/svg+xml"
			href="./template/images/favicon/favicon.svg"
			rel="icon" />

		<!-- Favicon PNG, Four sizes, sizes="16x16, 32x32, 96x96, 120x120" -->
		<link type="image/png"
			href="./template/images/favicon/favicon120.png"
			rel="icon" />

		<!-- Apple PNG, One size, sizes="180x180px" -->
		<link href="./template/images/favicon/apple-touch-icon.png"
			rel="apple-touch-icon" />

		<!-- Android PNG, Two sizes, sizes="192x192, 512x512px" -->
		<link href="manifest.json" rel="manifest" />

		<!-- ____________________________________________ -->
		<!-- _________________CSS Import_________________ -->
		<!-- ____________________________________________ -->
		<link href="./template/styles/style.min.css" rel="stylesheet" />

		{% block css_import %}
			<link href="/link/placeholder.min.css" rel="stylesheet" />
		{% endblock %}

		<!-- ____________________________________________ -->
		<!-- _________________JS Import__________________ -->
		<!-- ____________________________________________ -->
		<script src="./template/scripts/script.min.js" defer></script>

		{% block js_import %}
			<script src="/link/placeholder.min.js" defer></script>
		{% endblock %}
	</head>

	<!-- ______________________________________________ -->
	<!-- __________________Layout______________________ -->
	<!-- ______________________________________________ -->
	<!-- (BEM) Block__Element-ChildElement- -Modifier -->
	<body class="body">
		<noscript>You need to enable JavaScript to run this app</noscript>
		<div id="root">
			<!-- Header -->
			{% block header %}
				<h2 style="color: green">Header Placeholder</h2>
			{% endblock %}
			<main class="main" id="main">
				<!-- Main Sections -->
				{% block main %}
					<h2 style="color: green">Main Placeholder</h2>
				{% endblock %}
			</main>
			<!-- Footer -->
			{% block footer %}
				<h2 style="color: green">Footer Placeholder</h2>
			{% endblock %}
		</div>
	</body>
</html>
